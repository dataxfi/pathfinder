{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2015"
    ],
    "module": "CommonJS",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es5",
    "typeRoots": [
      "../node_modules/@types"
    ], 
    "outDir": "./public", 
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.ts"
, "index.ts"  ],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts",
    "src/test/"
  ],
  "compileOnSave": false,
}
